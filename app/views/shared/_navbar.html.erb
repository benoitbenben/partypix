<div class="navbar-wagon">
  <div class="navbar-wagon-left">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "PartyPix_logo.png" %>
    <% end %>
  </div>


  <% if user_signed_in? %>

    <div class="navbar-wagon-right">

      <%= link_to profile_path, class: "navbar-wagon-item" do %>
        <i class="fas fa-user-circle"></i>
      <% end %>

      <%= link_to destroy_user_session_path, method: :delete, class: "navbar-wagon-item" do %>
        <i class="fas fa-sign-out-alt"></i>
      <% end %>

    </div>

  <% else %>

    <div class="navbar-wagon-right">
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fas fa-sign-in-alt"></i>
      <% end %>
    </div>

  <% end %>

</div>


