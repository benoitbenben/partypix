<div class="col-xs-12">

  <div class="flat-card">

    <div class="description">

      <div class= "title"><%= room.name %></div>

      <div class= "date"><%= room.date.strftime("%d %b %Y") %></div>

      <div class="data-container">
        <div class="data-element"><i class="fa fa-users"></i>   <%= room.users.count %></div>
        <div class="data-element"><i class="fa fa-comment"></i>   <%= room.comments.count %></div>
      </div>

    </div>

    <div class="picture">
      <% if !room.top_picture.nil? %>
        <%= cl_image_tag room.top_picture.photo, width: 200, height: 110, crop: :thumb, gravity: :face %>
      <% else %>
         <%= image_tag("PartyPix_main_logo.png", class: "picture-default") %>
      <% end %>
    </div>

    <%= link_to "", room_path(room), class: "link" %>

  </div>
</div>
