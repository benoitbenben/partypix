<div class="container">
  <div class="text-center">
    <h2><%= @room.name %> </h2>
    <h3><%= @room.date %> </h3>
  </div>

  <div class="text-center">
    <p> <strong>Top10</strong> pictures of this room</p>
  </div>

  <div class="row">
    <% @top10_pictures.each do |picture| %>
      <div class="col-xs-4 col-sm-3 col-md-1 no-padding">
        <div class="top10card">
          <%= cl_image_tag(picture.photo, width:100, height: 100, crop: :thumb) %>
          <div class="vote">
            <p><%= picture.upvotes_count %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @room.pictures.each do |picture| %>
      <% if picture.photo %>
        <div class="col-xs-6 col-sm-4 col-md-3 no-padding">
          <%= link_to cl_image_path(picture.photo) do %>
            <%= cl_image_tag picture.photo, width: 200, height: 200, crop: :thumb %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="text-center">
    <p>Room creator : <%= cl_image_tag(@room.user.avatar, width: 20, height: 20, crop: :fill) %> <%= @room.user.nickname %></p>
    <p>Contributors to the room :
      <% @room.users.each do |user| %>
        <div>
          <%= cl_image_tag(user.avatar, width: 20, height: 20, crop: :fill) %> <%= user.nickname %>
        </div>
      <% end %>
      <br>
  </div>

  <div class="text-center">
    <p><strong>ready to upload some pix ?</strong></p>
    <%= link_to "upload my pictures", new_room_picture_path(@room), class: "btn btn-minor" %>
  </div>
</div>
