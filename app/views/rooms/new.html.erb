<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      <br>
      <strong>1/2</strong>
      <h2>Name your room</h2>
      <br>
    </div>

    <div class="col-xs-10 col-xs-offset-1">
      <%= simple_form_for (@room) do |f| %>
        <%= f.input :name, placeholder: "e.g.: Rob's birthday party" %>
        <%= f.input :date %>
        <div class="text-center">
          <%= f.submit "Create", class: "btn btn-major" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
