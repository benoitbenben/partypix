<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <h1>1/2 - Name your room</h1>
    </div>

    <div class="col-xs-10 col-xs-offset-1">
      <%= simple_form_for (@room) do |f| %>
        <%= f.input :name, placeholder: "e.g.: Bob's birthday party" %>
        <%= f.input :date %>
        <%= f.submit "Create", class: "btn btn-major" %>
      <% end %>
    </div>
  </div>
</div>
